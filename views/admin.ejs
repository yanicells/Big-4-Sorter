<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@600&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'lora': ['Lora', 'serif'],
                        'open-sans': ['Open Sans', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <title>UniSort</title>
</head>

<body class="min-h-screen flex flex-col font-open-sans bg-white text-gray-900">
    <div id="header-placeholder"></div>

    <main>
        <section class="bg-white">
            <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
                <div class="bg-gray-100 shadow-lg rounded-lg p-8 md:p-12 mb-8 border-t-4 border-gray-800">
                    <h1 class="text-gray-900 font-lora text-3xl md:text-5xl font-semibold mb-2">University Distribution</h1>
                </div>

                <div class="relative overflow-x-auto rounded-lg">
                    <% const familyNames=['ADMU', 'DLSU' , 'UP' , 'UST' ]; %>
                    <% if(locals.families && families.length> 0) {%>
                    <% locals.families.forEach(function(family, index) { %>
                    <div class="bg-gray-50 shadow-lg rounded-lg p-2 md:p-4 mb-2 text-center mt-4">
                        <h2 class="text-gray-900 font-lora text-1xl md:text-3xl font-semibold"><%= familyNames[index] %> Students</h2>
                    </div>
                    <table class="w-full text-sm text-left rtl:text-right text-gray-900 mb-8">
                        <thead class="text-xs text-white uppercase bg-gray-800">
                            <tr>
                                <th scope="col" class="px-6 py-3">ID</th>
                                <th scope="col" class="px-6 py-3">Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(family.length> 0) {%>
                            <% family.forEach(function(student) { %>
                            <tr class="bg-gray-50 border-b border-gray-200">
                                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                                    <%= student.id %>
                                </th>
                                <td class="px-6 py-4">
                                    <%= student.name %>
                                </td>
                            </tr>
                            <% }); %>
                            <% } else { %>
                            <tr class="bg-gray-50 border-b border-gray-200">
                                <td colspan="2" class="px-6 py-4 text-center text-gray-500">No students in this university.</td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <% }); %>
                    <% } %>
                </div>
            </div>
        </section>
    </main>

    <div id="footer-placeholder"></div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/partials.js"></script>
</body>

</html>